<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nike - Just Do It</title>
    <link rel="stylesheet" href="~/css/style.css"/>
    <link rel="shortcut icon" href="~/img/logo.png"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
		  crossorigin="anonymous" referrerpolicy="no-referrer" />
    

</head>
<body>

    @await Component.InvokeAsync("NavigationBar")
    @RenderBody()
    
    <!--Footer-->

    <footer>
        <div class="footer_main">
            <div class="tag">
                <h1>Contact</h1>
                <a href="#"><i class="fa-solid fa-house"></i>Khu phố 6, Linh Trung, Thủ Đức</a>
                <a href="#"><i class="fa-solid fa-phone"></i>+84 000 000 000 </a>
                <a href="#"><i class="fa-solid fa-envelope"></i>2052@gm.uit.vn</a>
            </div>

            <div class="tag">
                <h1>Get Help</h1>
                <a href="#" class="center">FAQ</a>
                <a href="#" class="center">Shipping</a>
                <a href="#" class="center">Returns</a>
                <a href="#" class="center">Payment Options</a>
            </div>

            <div class="tag">
                <h1>Our Stores</h1>
                <a href="#" class="center">VietNam</a>
                <a href="#" class="center">USA</a>
                <a href="#" class="center">Korea</a>
                <a href="#" class="center">Japan</a>
            </div>

            <div class="tag">
                <h1>Follw Us</h1>
                <div class="social_link">
                    <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                </div>
            </div>

            <div class="tag">
                <h1>Newsletter</h1>
                <div class="search_bar">
                    <input type="text" placeholder="You email id here">
                    <button id="showLoginForm" type="submit">Subscribe</button>
                </div>
            </div>

        </div>
    </footer>
    <script>
        //lấy showLoginForm và loginForm
        var showLoginForm = document.getElementById("showLoginForm");
        var loginForm = document.getElementById("loginForm");
        //nhấn vào showLoginForm thì hiện loginForm nếu nhấn lại icon sẽ thoát
        showLoginForm.onclick = function () {
            loginForm.classList.remove("hidden");
        }
        var closeLoginForm = document.getElementById("closeLoginForm");

        // Add a click event listener to hide the login form
        closeLoginForm.addEventListener("click", function () {
            loginForm.classList.add("hidden");
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
